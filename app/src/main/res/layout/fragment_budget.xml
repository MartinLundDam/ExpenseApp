<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BudgetFragment"
    android:background="#00BCD4"
    tools:ignore="ExtraText"><![CDATA[>

    ]]>

    <TextView
        android:id="@+id/introTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="@string/BudgetExplaination" />

    <TextView
        android:id="@+id/startCapitalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/startCapitalSB"
        android:layout_above="@+id/startCapitalSB"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Start Capital:" />

    <SeekBar
        android:id="@+id/startCapitalSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="600dp"
        android:max="50"/>

    <TextView
        android:id="@+id/monthlyCapitalTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/monthlyCapitalSB"
        android:layout_above="@+id/monthlyCapitalSB"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Monthly capital:" />

    <SeekBar
        android:id="@+id/monthlyCapitalSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:max="300"
        android:layout_marginBottom="500dp" />

    <TextView
        android:id="@+id/interestRateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/interestRateSB"
        android:layout_above="@+id/interestRateSB"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Interest rate:" />

    <SeekBar
        android:id="@+id/interestRateSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="400dp"
        android:max="20"/>

    <TextView
        android:id="@+id/timeHorizonTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/timeHorizonSB"
        android:layout_above="@+id/timeHorizonSB"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Time horizon:" />

    <SeekBar
        android:id="@+id/timeHorizonSB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="300dp"
        android:min="1"
        android:max="40"/>


    <TextView
        android:id="@+id/amountTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="227dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:text="Your potential capital:" />


</RelativeLayout>